{% extends 'security/layout.html.twig' %}

{% block title %}{{ parent() }} - Reset password{% endblock %}

{% block content %}
<h3 class="display-1 mb-3">Reset password</h3>
<form method="post">
    <div class="form-group mb-2">
        <div class="input-group mb-2 mr-sm-2">
            <div class="input-group-prepend d-none d-sm-block">
                <div class="input-group-text" style="width:120px;"><i class="fas fa-at mr-2"></i> Email</div>
            </div>
            <input type="text" name="_email" id="inputEmail" class="form-control" placeholder="Email" required autofocus>
        </div>
    </div>
    <div class="form-group mb-1 text-xs-left text-sm-right">
        <button class="btn btn-dark" type="submit" id="submit">Submit</button>
    </div>
    <div class="form-group mb-0 text-xs-left text-sm-right">
        <small class="text-muted"><a href="{{ path('login') }}" class="text-muted">Back to authenticate</a></small>
    </div>
</form>
{% endblock %}
