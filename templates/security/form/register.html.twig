{{ form_start(form) }}

    {{ form_row(form._token) }}

    <div class="form-group mb-2">
        <div class="input-group mb-2 mr-sm-2">
            <div class="input-group-prepend d-none d-sm-block">
                <div class="input-group-text" style="width:120px;"><i class="fas fa-user mr-2"></i> Username</div>
            </div>
            {{ form_widget(form.username, { 'attr': { 'placeholder': 'Username', 'required': true, 'autofocus': true } }) }}
            {% if form.username.vars.errors|length %}
            <code class="mt-1 text-danger">
                {% for error in form.username.vars.errors %}
                <i class="fas fa-exclamation-triangle"></i> {{ error.message }}
                {% endfor %}
            </code>
            {% endif %}
        </div>
    </div>

    <div class="form-group mb-2">
        <div class="input-group mb-2 mr-sm-2">
            <div class="input-group-prepend d-none d-sm-block">
                <div class="input-group-text" style="width:120px;"><i class="fas fa-at mr-2"></i> Email</div>
            </div>
            {{ form_widget(form.email, { 'attr': { 'placeholder': 'Email', 'required': true } }) }}
            {% if form.email.vars.errors|length %}
            <code class="mt-1 text-danger">
                {% for error in form.email.vars.errors %}
                <i class="fas fa-exclamation-triangle"></i> {{ error.message }}
                {% endfor %}
            </code>
            {% endif %}
        </div>
    </div>

    <div class="form-group mb-3">
        <div class="input-group mb-2 mr-sm-2">
            <div class="input-group-prepend d-none d-sm-block">
                <div class="input-group-text" style="width:120px;"><i class="fas fa-unlock-alt mr-2"></i> Password</div>
            </div>
            {{ form_widget(form.plainPassword.first, { 'attr': { 'placeholder': 'Password', 'required': true } }) }}
            {{ form_widget(form.plainPassword.second, { 'attr': { 'placeholder': 'Repeat', 'required': true } }) }}
            {% if form.plainPassword.first.vars.errors|length %}
            <code class="mt-1 text-danger">
                {% for error in form.plainPassword.first.vars.errors %}
                <i class="fas fa-exclamation-triangle"></i> {{ error.message }}
                {% endfor %}
            </code>
            {% endif %}
        </div>
    </div>

    <div class="form-group mb-1 text-xs-left text-sm-right">
        {{ form_errors(form) }}
        {{ form_widget(form.submit, { 'label': 'Submit', 'attr': { 'class': 'btn-dark' } }) }}
    </div>

    <div class="form-group mb-0 text-xs-left text-sm-right">
        <small class="text-muted"><a href="{{ path('login') }}" class="text-muted">Back to authenticate</a></small>
    </div>
    
{{ form_end(form) }}