{{ form_start(form) }}

    {{ form_row(form._token) }}

    <div class="form-group mb-2">
        <div class="input-group mb-2 mr-sm-2">
            <div class="input-group-prepend d-none d-sm-block">
                <div class="input-group-text"><i class="fas fa-user mr-2"></i> Login</div>
            </div>
            {{ form_widget(form.username, { 'attr': { 'placeholder': 'Your username or email', 'required': true, 'autofocus': true } }) }}
        </div>
    </div>

    {% if form.vars.errors|length %}
    <div class="form-group mb-2">
        <code class="mt-1 text-danger">
            {% for error in form.vars.errors %}
            <i class="fas fa-exclamation-triangle"></i> {{ error.message }}
            {% endfor %}
        </code>
    </div>
    {% endif %}

    <div class="form-group mb-1 text-xs-left text-sm-right">
        <a href="{{ path('login') }}" class="btn btn-secondary">Back</a>
        {{ form_widget(form.submit, { 'label': 'Submit', 'attr': { 'class': 'btn-dark' } }) }}
    </div>
    
{{ form_end(form) }}
